{
  "name": "x-tours",
  "version": "1.0.0",
  "description": "Landing page for X-tours co.",
  "main": "public/index.html",
  "scripts": {
    "clean": "rimraf public",
    "serve": "browser-sync start --server public --files public",
    "start": "npm run copy:src && npm run serve",
    "run-all": "npm-run-all clean copy --parallel watch serve",
    "build": "npm-run-all copy build:*",
    "copy": "npm-run-all --parallel copy:*",
    "watch": "npm-run-all --parallel watch:*",
    "copy:src": "copyfiles -u 1 \"src/*.html\" \"./src/assets/**/*\" public",
    "watch:src": "onchange \"src/*.html\" \"src/assets/**/*\" -- npm run copy:src",
    "build:sass": "sass --no-source-map  src/sass:public/css",
    "watch:sass": "sass --no-source-map --watch src/sass:public/css",
    "postbuild": "postcss public/css/*.css -u autoprefixer cssnano -r --no-map"
  },
  "author": "Ahmad Yousif",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.7",
    "browser-sync": "^2.27.10",
    "copyfiles": "^2.4.1",
    "cssnano": "^5.1.12",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^9.1.0",
    "sass": "^1.52.3"
  }
}
